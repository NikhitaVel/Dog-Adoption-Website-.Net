@page
@model Project.Pages.StatsModel

@{
    ViewData["Title"] = "Stats";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donation Statistics</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .progress-wrapper {
            margin-bottom: 40px;
        }

        .progress-label {
            font-size: 18px;
        }

        @* .counter {
            font-size: 36px;
            font-weight: bold;
        } *@

        .stat-badge {
            font-size: 18px;
        }
        .icon {
            font-size: 48px;
            margin-bottom: 20px;
            color: #ff5733;
            animation: bounce 1.5s infinite;
        }
        .counter {
            font-size: 36px;
            font-weight: bold;
            color: #ff5733;
            animation: fadeIn 2s forwards;
            opacity: 0;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4"><span class="icon">&#x1F4B0;</span>Donation Statistics</h1>

        <!-- Total Donations Received Progress Bar -->
        <div class="mb-4">
                <h3>Total Number of Donations Received: <span class="badge badge-primary stat-badge">@Model.TotalNumDonations</span></h3>
                
            </div>

        <!-- Total Amount of Donations Progress Bar -->
        <div class="progress-wrapper">
            <div class="progress-label">Total Amount Received from Donations</div>
            <div class="progress">
                <div class="progress-bar bg-info" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <h3>@Model.TotalAmount</h3>
            <em>This Month's target: $2000</em>
        </div>
    </div>

        <div class="container mt-5">
            <h1 class="text-center mb-4"><span class="icon">&#x1F43E;</span> Adoption Statistics</h1>

            <!-- Total Adoptions Badge -->
            <div class="mb-4">
                <h3>Number of dogs Adopted: <span class="badge badge-primary stat-badge">6</span></h3>
                
            </div>
            <br />
            <br />


                        <h1 class="text-center mb-4"><span class="icon">👤</span> Users</h1>

            <!-- Total No. of Users Badge -->
            <div class="mb-4">
                                <h3>Number of users: <span class="badge badge-success stat-badge">@Model.TotalUsers</span></h3>

            </div>
        </div>
        <br>
        <br>


</body>
</html>