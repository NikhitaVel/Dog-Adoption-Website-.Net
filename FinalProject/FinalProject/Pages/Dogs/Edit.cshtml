@page
@model Project.Pages.Dogs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Dog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dog.DogId" />
            <div class="form-group">
                <label asp-for="Dog.Breed" class="control-label"></label>
                <input asp-for="Dog.Breed" class="form-control" />
                <span asp-validation-for="Dog.Breed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.Age" class="control-label"></label>
                <input asp-for="Dog.Age" class="form-control" />
                <span asp-validation-for="Dog.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.Gender" class="control-label"></label>
                <input asp-for="Dog.Gender" class="form-control" />
                <span asp-validation-for="Dog.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.IsVaccinated" class="control-label"></label>
                <input asp-for="Dog.IsVaccinated" class="form-control" />
                <span asp-validation-for="Dog.IsVaccinated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.CenterNameId" class="control-label"></label>
                <select asp-for="Dog.CenterNameId" class="form-control" asp-items="ViewBag.CenterNameId"></select>
                <span asp-validation-for="Dog.CenterNameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
