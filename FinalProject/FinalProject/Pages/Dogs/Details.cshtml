@page
@model Project.Pages.Dogs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css">
    <style>
        .btn-primary {
            background-color: #816F7D;
            color: #fff;
            font-weight: bold;
            border: none;
        }
        body{
            background-color: #faf4fc;
        }
    </style>
</head>
<body>
<h1>Details</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.Breed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.Breed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.IsVaccinated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.IsVaccinated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.CenterName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Center.CenterName), @Html.DisplayFor(model => model.Center.Location), @Html.DisplayFor(model => model.Center.ZipCode)
        </dd>
    </dl>
</div>
<br />
<br />
<h3>
    Want to know more about @Html.DisplayFor(model => model.Dog.Name)?
</h3>
    <p>Contact @Html.DisplayFor(model => model.Center.CenterName) at @Html.DisplayFor(model => model.Center.ContactPhone) or write to  @Html.DisplayFor(model => model.Center.ContactEmail)</p>
</body>
</html>