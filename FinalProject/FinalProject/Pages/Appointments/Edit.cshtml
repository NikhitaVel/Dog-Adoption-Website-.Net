    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.AppointmentId" />
            <div class="form-group">
                <label asp-for="Appointment.NameId" class="control-label"></label>
                <select asp-for="Appointment.NameId" class="form-control" asp-items="ViewBag.NameId"></select>
                <span asp-validation-for="Appointment.NameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.DateTime" class="control-label"></label>
                <input asp-for="Appointment.DateTime" class="form-control" />
                <span asp-validation-for="Appointment.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.CenterId" class="control-label"></label>
                <select asp-for="Appointment.CenterId" class="form-control" asp-items="ViewBag.CenterId"></select>
                <span asp-validation-for="Appointment.CenterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Reason" class="control-label"></label>
                <input asp-for="Appointment.Reason" class="form-control" />
                <span asp-validation-for="Appointment.Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

